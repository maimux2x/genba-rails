<h1>ユーザー登録</h1>

<%= form_with model: [:admin, @user] do |f| %>
  <div>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.check_box :admin %>
    <%= f.label :admin, "管理者権限" %>
  </div>
  <div>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, "パスワード(確認)" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "登録" %>
<% end %>
